{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2022",
		"lib": [
			"ES2020"
		],
		"moduleResolution": "nodenext",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"ts-node": {
		"esm": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}